apt update -y && apt install unzip -y
curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip"  -o  awscliv2.zip
unzip awscliv2.zip
sudo ./aws/install



#! /bin/bash
aws configure
curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
wget https://github.com/kubernetes/kops/releases/download/v1.33.0/kops-linux-amd64
chmod +x kops-linux-amd64 kubectl
mv kubectl /usr/local/bin/kubectl
mv kops-linux-amd64 /usr/local/bin/kops
echo "export PATH=$PATH:/usr/local/bin/" >> source .bashrc


export KOPS_STATE_STORE=s3://venkataaaa.k8s.local

kops create cluster --name venkats.k8s.local --zones ap-south-1a --control-plane-image ami-06bf291068cdd3674  --control-plane-count=1 --control-plane-size c7i-flex.large --image ami-06bf291068cdd3674  --node-count=2 --node-size c7i-flex.large

kops update cluster --name venkats.k8s.local --yes --admin

kops validate cluster --wait 10m



kops delete cluster --name venkats.k8s.local --yes


